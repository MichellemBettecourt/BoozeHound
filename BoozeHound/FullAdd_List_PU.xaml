<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="BoozeHound.FullAdd_List_PU"
             Style="{StaticResource popContent}">
        
     <StackLayout>
        <StackLayout Orientation="Vertical" HeightRequest="250" WidthRequest="300" BackgroundColor="White">
        <Label Text="Choose" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" 
                           BackgroundColor="Blue" TextColor="White" />
        <!-- Place new controls here -->
        <Button Margin="50,0,50,0" Text="Beer" Clicked="Full_Add_Beer_Clicked" />
        <Button Margin="50,0,50,0" Text="Wine" Clicked="Full_Add_Wine_Clicked" />
        <Button Margin="50,0,50,0" Text="Spirit" Clicked="Full_Add_Spirits_Clicked" />
    

        <Button Margin="75,0,75,0" x:Name="btnCancelFullAdd" Text="Cancel" HorizontalOptions="Start" 
            Clicked="BtnCancelFullAdd_Clicked" Style="{StaticResource btnWhite}" />
      </StackLayout>
    </StackLayout>
    
</ContentView>
